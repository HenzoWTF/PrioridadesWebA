@page "/Detailsprioridades/Id={Id:int}"
@using Library.Models
@inject HttpClient httpClient
@inject NavigationManager navigationManager

<PageTitle>View prioridades</PageTitle>

<div class="container">
    <div class="card shadow-lg">
        @*Header*@
        <div class="card-header">
            <h3><strong>View Prioridades</strong></h3>
        </div>
        <div class="card-body col-5">
            <div class="col-xs-12 col-sm-12 col-md-8 col-lg-6 col-xl-4"></div>
            @*Datos*@

            @*Prioridad ID*@
            <div class="col-xs-12 col-sm-12 col-md-8 col-lg-6 col-xl-4">
                <h4>
                    <strong>ID:</strong>
                    @prioridades.IdPrioridades
                </h4>
            </div>

            @*Descripcion*@
            <h4>
                <strong>Descripci&oacute;n: </strong>
                @prioridades.Descripcion
            </h4>

            <div class="col-xs-12 col-sm-12 col-md-8 col-lg-6 col-xl-4">
                <h4>
                    <strong>D&iacute;as Compromiso:</strong>
                    @prioridades.DiasCompromiso
                </h4>
            </div>


        </div>

        <div class="card-footer d-flex justify-content-center">
            <div class="px-2">
                <a href="IndexPrioridades" class="btn btn-outline-primary"><i class="bi bi-box-arrow-left" /> Volver</a>
            </div>
        </div>

    </div>
</div>


@code {
    [Parameter] public int Id { get; set; }
    public Prioridades prioridades { get; set; } = new Prioridades();

    protected override async Task OnInitializedAsync()
    {
        if (Id > 0)
        {
            prioridades = await httpClient.GetFromJsonAsync<Prioridades>($"api/Prioridades/{Id}");
        }
    }
}
